<%= form_for @lesson do |f| %>
    <div class="form-group">
        <%= f.label :level %>
        <%= f.text_field :level, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.hidden_field :content %>
        <div id='froala-editor'>
            <% if(@lesson.content) %>
                <%= @lesson.content.html_safe %>
            <% end  %>
        </div>
    </div>
    <%= f.submit "Submit", id: 'submit_lesson', class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
<% end %>

