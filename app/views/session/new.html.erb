<div class="row">
    <div class="col-xs-4 col-xs-offset-4">
        <div class="box">
            <h2>Log in</h2>
            <%= form_tag sign_in_path do %>
              <div class="form-group">
                <%= label_tag(:name, 'User Name:') %>
                <%= text_field_tag(:name, nil, class: 'form-control', placeholder: 'User Name') %>
              </div>
              <div class="form-group">
               <%= label_tag(:password, 'password:') %>
               <%= password_field_tag(:password, nil, class: 'form-control', placeholder: 'password') %>
              </div>
              <%= submit_tag('Login', class: 'btn btn-primary btn-lg btn-block') %>
              <a href='/as_guest' class="btn btn-default btn-lg btn-block">Login as Guest</a>
            <% end %>
        </div>    
    </div>
</div>